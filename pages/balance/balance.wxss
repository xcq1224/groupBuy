.page_bd{
  height: 100%;
}
.main{
  width: 100%;
  height: 100%;
  padding: 100rpx 40rpx 0;
  box-sizing: border-box;
  text-align: center;
}
.header i{
  font-size: 120rpx;
  color: #fff;
  background: #efc710;
  padding: 10rpx;
  border-radius: 50%;
}
.balance{
  font-size: 48rpx;
  font-weight: bold;
  margin: 20rpx 0 40rpx;
}
.withdraw{
  height: 72rpx;
  line-height: 72rpx;
  font-size: 32rpx;
  background: #45c018;
  color: #fff;
  border-radius: 8rpx;
}
.details{
  height: 68rpx;
  line-height: 68rpx;
  font-size: 32rpx;
  border: 2rpx solid #45c018;
  color: #45c018;
  border-radius: 8rpx;
  margin-top: 30rpx;
}
.common_problem{
  margin-top: 300rpx;
  color: #45c018;
}
.note{
  color: #999;
}